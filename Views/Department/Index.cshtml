@model IEnumerable<Department>
@{
    ViewBag.Title = "Department";
}
<h1>@ViewBag.Title</h1>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Location)</th>
    </tr>
    @foreach (var department in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => department.Id)</td>
            <td>@Html.DisplayFor(modelItem => department.Name)</td>
            <td>@Html.DisplayFor(modelItem => department.Location)</td>
            <td>
            @Html.ActionLink("Edit", "Edit", new { id=department.Id }) |
            @Html.ActionLink("Details", "Details", new { id=department.Name }) |
            @Html.ActionLink("Delete", "Delete", new { id=department.Location })
            </td>
        </tr>
    }
    <tr>
        <td>

        </td>
    </tr>
</table>
<div>@Html.ActionLink("New", "create")